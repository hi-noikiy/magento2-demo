                    jQuery('#popup-mpdal-deliveredorder').show();
                    var displaymessage = "Please click on Submit to change Order Status to Deliver.";
                    jQuery('.unallocated_data').html(displaymessage);
                    jQuery('.unallocated_data').css('display','block');
                }                 
            }
        });

