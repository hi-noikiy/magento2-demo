<?php $availableSocials = $block->getAvailableSocials(); ?>
<?php if ($block->canShow() && sizeof($availableSocials)): ?>
    <div class="fb_gplus_wrap">
            <?php foreach ($availableSocials as $key => $social): ?>
                    <a class="btn-social btn-<?= $block->getBtnKey($key) ?>" data-mage-init='{"socialProvider": {"url": "<?php echo $social['login_url']?>", "label": "<?php echo __('Login By %1', $social['label'])?>"}}'>
                        <span class="fa-<?= $block->getBtnKey($key) ?>"></span>
                        <span><?php echo __('Login with %1', $social['label']) ?></span>
                    </a>
            <?php endforeach; ?>
    </div>
<?php endif; ?>